# ZeroState API Environment Variables
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=./zerostate.db
# For production with Supabase/PostgreSQL, use:
# DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# Server Configuration
PORT=8080
HOST=0.0.0.0

# JWT Secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Orchestrator
ORCHESTRATOR_WORKERS=5

# Debug Mode
DEBUG=false

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100

# Telemetry
ENABLE_METRICS=true
ENABLE_TRACING=true

# Google Gemini API (for LLM intelligence)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp

# Cloudflare R2 Storage (for WASM binaries)
# R2 is S3-compatible, so we use standard S3 env vars
S3_BUCKET=zerostate-production
S3_REGION=auto
S3_ENDPOINT=https://d4affab848a8f8e47b7930147fe1b43a.r2.cloudflarestorage.com
